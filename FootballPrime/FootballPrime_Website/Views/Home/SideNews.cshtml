@model IEnumerable<FootballPrime_Website.Models.Post>
<h2 class="heading-blue">Tin lề</h2>
@foreach (var item in Model)
{
    <img src="~/img/@item.Img" alt="img" width="279" height="130"/>
    <h3><a href="@Url.Action("Index","Post",new { id = item.PostID})">@item.Title</a></h3>
    <p>@item.Content.Substring(0,150)</p>
    <p><a href="@Url.Action("Index","Post",new { id = item.PostID})">Xem thêm &raquo;</a></p>
}



